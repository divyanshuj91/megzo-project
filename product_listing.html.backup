    <style>
        /* Specific styles for Product Listing */
        .main-container {
            max-width: 1248px;
            margin: 10px auto;
            display: flex;
            gap: 10px;
        }

        /* Sidebar Filters */
        .sidebar {
            width: 270px;
            background: #fff;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, .1);
            padding: 15px;
            align-self: flex-start;
        }

        .filter-header {
            font-size: 18px;
            font-weight: 500;
            border-bottom: 1px solid #f0f0f0;
            padding-bottom: 10px;
            margin-bottom: 15px;
        }

        .filter-section {
            border-bottom: 1px solid #f0f0f0;
            padding-bottom: 15px;
            margin-bottom: 15px;
        }

        .filter-title {
            font-size: 13px;
            font-weight: 500;
            margin-bottom: 10px;
            text-transform: uppercase;
            color: #212121;
        }

        .filter-item {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
            font-size: 14px;
            color: #212121;
            cursor: pointer;
        }

        .filter-item input {
            margin-right: 10px;
        }

        /* Product Grid Area */
        .content-area {
            flex: 1;
            background: #fff;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, .1);
            padding: 15px;
        }

        .sort-bar {
            display: flex;
            align-items: center;
            border-bottom: 1px solid #f0f0f0;
            padding-bottom: 10px;
            margin-bottom: 15px;
            font-size: 14px;
        }

        .sort-bar span {
            font-weight: 500;
            margin-right: 15px;
        }

        .sort-option {
            margin-right: 20px;
            cursor: pointer;
            color: #212121;
        }

        .sort-option.active {
            color: #2874f0;
            font-weight: 500;
            border-bottom: 2px solid #2874f0;
        }

        /* Reuse product-grid from homepage.css but adjust for listing */
        .listing-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(230px, 1fr));
            /* Slightly larger cards */
            gap: 0;
            /* Flipkart style often has borders between items */
            border-top: 1px solid #f0f0f0;
            border-left: 1px solid #f0f0f0;
        }

        .listing-card {
            padding: 20px;
            border-right: 1px solid #f0f0f0;
            border-bottom: 1px solid #f0f0f0;
            cursor: pointer;
            transition: box-shadow 0.2s;
        }

        .listing-card:hover {
            box-shadow: 0 3px 16px 0 rgba(0, 0, 0, .11);
            z-index: 1;
        }

        .listing-img-container {
            height: 200px;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 15px;
        }

        .listing-img {
            max-height: 100%;
            max-width: 100%;
            object-fit: contain;
        }

        .listing-title {
            font-weight: 500;
            font-size: 14px;
            margin-bottom: 5px;
        }

        .listing-rating {
            background-color: #388e3c;
            color: white;
            font-size: 12px;
            font-weight: 500;
            padding: 2px 4px 2px 6px;
            border-radius: 3px;
            display: inline-flex;
            align-items: center;
            gap: 2px;
            margin-bottom: 10px;
        }

        .listing-price-row {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .listing-price {
            font-size: 18px;
            font-weight: 500;
        }

        .listing-original {
            color: #878787;
            text-decoration: line-through;
            font-size: 14px;
        }

        .listing-discount {
            color: #388e3c;
            font-size: 13px;
            font-weight: 500;
        }

        @media (max-width: 768px) {
            .main-container {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                display: none;
                /* Hide filters on mobile for now */
            }
        }
    </style>
