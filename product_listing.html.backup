                        <script>
                            // Profile functionality
                            document.addEventListener('DOMContentLoaded', () => {
                                const user = JSON.parse(localStorage.getItem('user'));
                                const loginBtn = document.querySelector('.login-btn-header');

                                if (user) {
                                    // Replace with profile icon only
                                    loginBtn.innerHTML = `
                                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" fill="currentColor"/>
                                            <path d="M12.0002 14.5C6.99016 14.5 2.91016 17.86 2.91016 22C2.91016 22.28 3.13016 22.5 3.41016 22.5H20.5902C20.8702 22.5 21.0902 22.28 21.0902 22C21.0902 17.86 17.0102 14.5 12.0002 14.5Z" fill="currentColor"/>
                                        </svg>
                                    `;
                                    loginBtn.style.backgroundColor = 'transparent';
                                    loginBtn.style.color = '#2d3748';
                                    loginBtn.style.border = 'none';
                                    loginBtn.style.padding = '5px';
                                    loginBtn.style.cursor = 'pointer';
                                    loginBtn.onclick = () => openProfileModal();
                                }
                            });

                            function openProfileModal() {
                                const modal = document.getElementById('profileModal');
                                const user = JSON.parse(localStorage.getItem('user'));

                                document.getElementById('profileAddress').value = user.address || '';
                                document.getElementById('profileContact').value = user.contact_number || '';

                                modal.style.display = 'flex';
                            }

                            document.querySelector('.profile-close').addEventListener('click', () => {
                                document.getElementById('profileModal').style.display = 'none';
                            });

                            window.addEventListener('click', (event) => {
                                const modal = document.getElementById('profileModal');
                                if (event.target === modal) {
                                    modal.style.display = 'none';
                                }
                            });

                            document.getElementById('profileForm').addEventListener('submit', async (e) => {
                                e.preventDefault();

                                const user = JSON.parse(localStorage.getItem('user'));
                                const address = document.getElementById('profileAddress').value.trim();
                                const contact_number = document.getElementById('profileContact').value.trim();
                                const messageDiv = document.getElementById('profileMessage');

                                if (!address && !contact_number) {
                                    messageDiv.textContent = 'Please fill at least one field';
                                    messageDiv.className = 'profile-message error';
                                    return;
                                }

                                try {
                                    const response = await fetch(`http://localhost:3000/api/users/${user.id}/profile`, {
                                        method: 'PUT',
                                        headers: { 'Content-Type': 'application/json' },
                                        body: JSON.stringify({ address, contact_number })
                                    });

                                    const data = await response.json();

                                    if (response.ok) {
                                        const updatedUser = {
                                            ...user,
                                            address: data.user.address,
                                            contact_number: data.user.contact_number
                                        };
                                        localStorage.setItem('user', JSON.stringify(updatedUser));

                                        messageDiv.textContent = 'Profile updated successfully!';
                                        messageDiv.className = 'profile-message success';

                                        setTimeout(() => {
                                            document.getElementById('profileModal').style.display = 'none';
                                            messageDiv.textContent = '';
                                        }, 1500);
                                    } else {
                                        messageDiv.textContent = data.message || 'Failed to update profile';
                                        messageDiv.className = 'profile-message error';
                                    }
                                } catch (error) {
                                    console.error('Error updating profile:', error);
                                    if (user) {
                                        // Update to show Profile Name with an icon
                                        loginBtn.innerHTML = `
                    <div style="display: flex; align-items: center; gap: 5px; cursor: pointer;">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" fill="white"/>
                            <path d="M12.0002 14.5C6.99016 14.5 2.91016 17.86 2.91016 22C2.91016 22.28 3.13016 22.5 3.41016 22.5H20.5902C20.8702 22.5 21.0902 22.28 21.0902 22C21.0902 17.86 17.0102 14.5 12.0002 14.5Z" fill="white"/>
                        </svg>
                        <span>${user.name}</span>
                    </div>
                `;
                                        loginBtn.style.backgroundColor = 'transparent';
                                        loginBtn.style.color = '#fff';
                                        loginBtn.style.border = 'none';
                                        loginBtn.style.padding = '0';
                                        loginBtn.onclick = null; // Remove default redirect
                                    }

                                    // Add event listeners to filters
                                    const checkboxes = document.querySelectorAll('.filter-item input[type="checkbox"]');
                                    checkboxes.forEach(cb => {
                                        cb.addEventListener('change', applyFilters);
                                    });

                                    fetchProducts();
                                });

                            async function fetchProducts() {
                                try {
                                    // Get category_id from URL if present
                                    const urlParams = new URLSearchParams(window.location.search);
                                    const categoryId = urlParams.get('category_id');

                                    let url = 'http://localhost:3000/api/products';
                                    if (categoryId) {
                                        url += `?category_id=${categoryId}`;
                                    }

                                    const response = await fetch(url);
                                    allProducts = await response.json(); // Store in global variable
                                    renderProducts(allProducts);
                                } catch (error) {
                                    console.error('Error fetching products:', error);
                                }
                            }

                            function applyFilters() {
                                let filtered = [...allProducts];

                                // 1. Price Filter
                                const priceCheckboxes = document.querySelectorAll('.filter-section:nth-child(2) .filter-item input:checked');
                                if (priceCheckboxes.length > 0) {
                                    filtered = filtered.filter(product => {
                                        return Array.from(priceCheckboxes).some(cb => {
                                            const label = cb.parentElement.textContent.trim();
                                            if (label.includes('Under')) return product.price < 1000;
                                            if (label.includes('1,000 - ₹5,000')) return product.price >= 1000 && product.price <= 5000;
                                            if (label.includes('5,000 - ₹10,000')) return product.price >= 5000 && product.price <= 10000;
                                            if (label.includes('Over')) return product.price > 10000;
                                            return false;
                                        });
                                    });
                                }

                                // 2. Rating Filter
                                const ratingCheckboxes = document.querySelectorAll('.filter-section:nth-child(3) .filter-item input:checked');
                                if (ratingCheckboxes.length > 0) {
                                    filtered = filtered.filter(product => {
                                        return Array.from(ratingCheckboxes).some(cb => {
                                            const label = cb.parentElement.textContent.trim();
                                            if (label.includes('4★')) return product.rating >= 4;
                                            if (label.includes('3★')) return product.rating >= 3;
                                            return false;
                                        });
                                    });
                                }

                                renderProducts(filtered);
                            }

                            function renderProducts(products) {
                                const container = document.getElementById('products-container');
                                container.innerHTML = '';

                                if (products.length === 0) {
                                    container.innerHTML = '<div style="padding:20px;">No products found matching your filters.</div>';
                                    return;
                                }

                                products.forEach(product => {
                                    const card = document.createElement('div');
                                    card.className = 'listing-card';

                                    const discount = product.discount_percentage || Math.round(((product.original_price - product.price) / product.original_price) * 100);

                                    card.innerHTML = `
                                <div class="listing-img-container">
                                    <img src="${product.image_url}" alt="${product.title}" class="listing-img">
                                </div>
                                <div class="listing-title">${product.title}</div>
                                <div class="listing-rating">
                                    ${product.rating} ★
                                </div>
                                <div class="listing-price-row">
                                    <div class="listing-price">₹${product.price}</div>
                                    <div class="listing-original">₹${product.original_price}</div>
                                    <div class="listing-discount">${discount}% off</div>
                                </div>
                `;

                                    // Add Add to Cart Button
                                    const btn = document.createElement('button');
                                    btn.textContent = 'Add to Cart';
                                    btn.style.marginTop = '10px';
                                    btn.style.width = '100%';
                                    btn.style.padding = '8px';
                                    btn.style.background = '#ff9f00';
                                    btn.style.border = 'none';
                                    btn.style.color = 'white';
                                    btn.style.fontWeight = '500';
                                    btn.style.cursor = 'pointer';
                                    btn.onclick = (e) => {
                                        e.stopPropagation();
                                        addToCart(product.id);
                                    };
                                    card.appendChild(btn);

                                    container.appendChild(card);
                                });
                            }

                            async function addToCart(productId) {
                                const user = JSON.parse(localStorage.getItem('user'));
                                if (!user) {
                                    alert("Please login to add items to cart");
                                    window.location.href = 'login.html';
                                    return;
                                }

                                try {
                                    const response = await fetch('http://localhost:3000/api/cart', {
                                        method: 'POST',
                                        headers: { 'Content-Type': 'application/json' },
                                        body: JSON.stringify({
                                            user_id: user.id,
                                            product_id: productId,
                                            quantity: 1
                                        })
                                    });

                                    if (response.ok) {
                                        alert("Item added to cart!");
                                    } else {
                                        alert("Failed to add item to cart");
                                    }
                                } catch (error) {
                                    console.error('Error adding to cart:', error);
                                }
                            }
                        </script>
                    </body>

</html>